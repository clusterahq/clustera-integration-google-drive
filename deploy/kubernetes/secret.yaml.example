apiVersion: v1
kind: Secret
metadata:
  name: google-drive-worker-secrets
  namespace: integrations
  labels:
    app: google-drive-worker
    component: secrets
type: Opaque
stringData:
  # S3 Credentials
  s3_bucket_name: "clustera-integration-payloads"
  aws_access_key_id: "YOUR_AWS_ACCESS_KEY_ID"
  aws_secret_access_key: "YOUR_AWS_SECRET_ACCESS_KEY"

  # Google OAuth Credentials (for development/testing only)
  # Production should use Control Plane STS tokens
  google_client_id: "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
  google_client_secret: "YOUR_GOOGLE_CLIENT_SECRET"

  # Monitoring (Optional)
  datadog_api_key: "YOUR_DATADOG_API_KEY"
  sentry_dsn: "YOUR_SENTRY_DSN"

---
# Note: In production, secrets should be managed via:
# - AWS Secrets Manager
# - HashiCorp Vault
# - Kubernetes Sealed Secrets
# - External Secrets Operator
#
# Example using External Secrets Operator:
#
# apiVersion: external-secrets.io/v1beta1
# kind: ExternalSecret
# metadata:
#   name: google-drive-worker-secrets
#   namespace: integrations
# spec:
#   secretStoreRef:
#     name: aws-secrets-manager
#     kind: SecretStore
#   target:
#     name: google-drive-worker-secrets
#   data:
#   - secretKey: aws_access_key_id
#     remoteRef:
#       key: integrations/google-drive/aws
#       property: access_key_id
#   - secretKey: aws_secret_access_key
#     remoteRef:
#       key: integrations/google-drive/aws
#       property: secret_access_key
#   - secretKey: s3_bucket_name
#     remoteRef:
#       key: integrations/google-drive/s3
#       property: bucket_name